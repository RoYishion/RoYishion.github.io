/* pages/mine/scoreManage/scoreManage.wxss */
.table {
    border: 0px solid darkgray;
}

.tr {
    display: flex;
    width: 100%;
    justify-content: center;
    height: 3rem;
    align-items: center;
}

.td {
    width: 30%;
    justify-content: center;
    display: flex;
    align-items: center;
}

.bg-w {
    background: snow;
}

.bg-g {
    background: #E6F3F9;
}

.th {
    width: 40%;
    justify-content: center;
    background: #7f9bef;
    color: #fff;
    display: flex;
    height: 3rem;
    align-items: center;
}

.image {
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
    margin-right: 16rpx;
    margin-left: 13px;
}
/* index.wxss */
page {
  background: #7f9bef;
  color: white;
  overflow-x: hidden;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.game {
  margin-left: 30rpx;
  margin-right: 30rpx;
  box-sizing: border-box;
  padding-bottom: 26rpx;
  width: 690rpx;
}

.gamebox {
  text-align: center;
  padding: 20rpx;
  margin-top: 10%;
}

.gamebox .gamerules {
  width: 100rpx;
  height: 50rpx;
  display: block;
  background-color: #fff;
  border-radius: 20px;
  color: #000;
  font-size: 26rpx;
  font-weight: bold;
  line-height: 50rpx;
  border: 4rpx solid #000;
  position: absolute;
  left: 80%;
  top: 10%;
}

.gamebox .gameavatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.gamebox .gamename {
  color: #fff;
  font-size: 36rpx;
}

.btn {
  background-color: #f6502a;
  text-align: center;
  width: 650rpx;
  height: 90rpx;
  border: none;
  border-radius: 50rpx;
  font-size: 40rpx;
  font-weight: bold;
  line-height: 90rpx;
  margin: 32rpx auto;
  top: 100px;
  margin-top: 0rpx;
  position: relative;
  color: #ffffff;
  border: 2px solid #000;
}

.rulesbox {
  position: absolute;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.6);
  width: 100%;
  height: 100%;
}

.rulesbox .gamerules {
  width: 500rpx;
  height: 500rpx;
  background-color: #fff;
  border: 1px solid #000;
  margin-top: -250rpx;
  margin-left: -250rpx;
  position: relative;
  left: 50%;
  top: 40%;
  border-radius: 20rpx;
  color: #000;
  z-index: 100;
}

.closerulesbox {
  position: fixed;
  width: 100%;
  height: 100%;
}

.rulesboxtitle {
  color: #000;
  font-weight: bold;
  text-align: center;
  padding: 30rpx;
}

.gamecon {
  padding: 20rpx;
  white-space: pre-wrap;
  height: 250rpx;
  overflow-y: auto;
  font-size: 28rpx;
  line-height: 50rpx;
  color: #565656;
}

.rulesclose {
  width: 300rpx;
  height: 80rpx;
  background-color: #f6502a;
  color: #fff;
  text-align: center;
  border-radius: 30rpx;
  line-height: 80rpx;
  margin: 15rpx auto;
}
/* pages/welcome/register/register.wxss */
page {
    height: 100%;
    background-color: #7f9bef;
}

.register {
    width: 80rpx;
    height: 50rpx;
    display: block;
    background-color: #fff;
    border-radius: 20px;
    color: #000;
    font-size: 26rpx;
    font-weight: bold;
    text-align: center;
    line-height: 50rpx;
    border: 4rpx solid #000;
    position: absolute;
    left: 80%;
    top: 10%;
}

.input {
    border: 1px solid black;
    margin: 20rpx;
}

.container {
    position: absolute;
    width: 100%;
    height: 100%;
}

.container image {
    width: 100%;
    height: 100%;
}

.login_box {
    width: 90%;
    position: absolute;
    top: 15%;
    left: 5%;
}

.section {
    width: 100%;
    border-bottom: 4rpx solid #FFF;
    margin-top: 40rpx;
    position: relative;
}

.section input {
    height: 100rpx;
    color: #FFF;
    box-sizing: border-box;
    padding-left: 80rpx;
    font-size: 36rpx;
}

.section image {
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    top: 20rpx;
    left: 10rpx;
}

.color {
    color: #FFF;
}

checkbox-group {
    display: flex;
    justify-content: flex-end;
    margin-top: 30rpx;
    color: #FFF;
    box-sizing: border-box;
    padding-right: 20rpx;
}

.login {
    margin-top: 260rpx;
}

.register {
    margin-top: 50rpx;
}

.btn {
    background-color: #f6502a;
    text-align: center;
    width: 650rpx;
    height: 90rpx;
    border: none;
    border-radius: 50rpx;
    font-size: 40rpx;
    font-weight: bold;
    line-height: 90rpx;
    margin: 32rpx auto;
    top: 100px;
    margin-top: 0rpx;
    position: relative;
    color: #ffffff;
    border: 2px solid #000;
}